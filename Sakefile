# Extensionless name of Markdown file
#! MANUSCRIPT_DIR = manuscript
#! MARKDOWN_FILE = manuscript_compiled

# Variables
#! PREFIX = /Users/andrew/.pandoc
#! BIB_FILE = /Users/andrew/Dropbox/Readings/Papers.bib
#! CSL = apa
#! CROSSREF = --filter pandoc-crossref -M figPrefix:"Figure" -M eqnPrefix:"Equation" -M tblPrefix:"Table"

# Other common CSLs:
#   * chicago-fullnote-bibliography
#   * chicago-syllabus-no-bib
#   * apa
#   * apsa-no-bib

# To add version control footer support in PDFs:
#   1. Run vcinit in the directory
#   2. Place `./vc` at the front of the formula
#   3. Add `-V vc` to the pandoc command
#   4. Change pagestyle to athgit instead of ath

generate output:
  help: convert Markdown file to different formats

  pdf:
    help: convert to PDF
    dependencies:
      - $MANUSCRIPT_DIR/$MARKDOWN_FILE.md
    formula: >
      replace_includes $MANUSCRIPT_DIR/$MARKDOWN_FILE.md | pandoc -r markdown+simple_tables+table_captions+yaml_metadata_block $CROSSREF -w latex -s -S --default-image-extension=pdf --latex-engine=xelatex --template=$PREFIX/templates/xelatex.template --filter pandoc-citeproc --csl=$PREFIX/csl/$CSL.csl --bibliography=$BIB_FILE -V chapterstyle=hikma-article -V pagestyle=ath -o $MANUSCRIPT_DIR/$MARKDOWN_FILE.pdf
    output:
      - $MANUSCRIPT_DIR/$MARKDOWN_FILE.pdf

  docx:
    help: convert to nice looking Word file through LibreOffice
    dependencies:
      - $MANUSCRIPT_DIR/$MARKDOWN_FILE.md
    formula: >
      replace_includes $MANUSCRIPT_DIR/$MARKDOWN_FILE.md | replace_pdfs | pandoc -r markdown+simple_tables+table_captions+yaml_metadata_block $CROSSREF -w odt -S --default-image-extension=png --template=$PREFIX/templates/odt.template --reference-odt=$PREFIX/styles/reference.odt --filter pandoc-citeproc --csl=$PREFIX/csl/$CSL.csl --bibliography=$BIB_FILE -o $MANUSCRIPT_DIR/$MARKDOWN_FILE.odt; 
      cd $MANUSCRIPT_DIR; /Applications/LibreOffice.app/Contents/MacOS/soffice --invisible --convert-to docx $MARKDOWN_FILE.odt;
      rm $MARKDOWN_FILE.odt
    output:
      - $MANUSCRIPT_DIR/$MARKDOWN_FILE.docx

  manuscript:
    help: convert to a Word file formatted as a manuscript through LibreOffice
    dependencies:
      - $MANUSCRIPT_DIR/$MARKDOWN_FILE.md
    formula: >
      replace_includes $MANUSCRIPT_DIR/$MARKDOWN_FILE.md | replace_pdfs | pandoc -r markdown+simple_tables+table_captions+yaml_metadata_block $CROSSREF -w odt -S --default-image-extension=png --template=$PREFIX/templates/odt-manuscript.template --reference-odt=$PREFIX/styles/reference-manuscript.odt --filter pandoc-citeproc --csl=$PREFIX/csl/$CSL.csl --bibliography=$BIB_FILE -o $MANUSCRIPT_DIR/$MARKDOWN_FILE-manuscript.odt; 
      cd $MANUSCRIPT_DIR; /Applications/LibreOffice.app/Contents/MacOS/soffice --invisible --convert-to docx $MARKDOWN_FILE-manuscript.odt;
      rm $MARKDOWN_FILE-manuscript.odt
    output:
      - $MANUSCRIPT_DIR/$MARKDOWN_FILE-manuscript.docx

  html:
    help: convert to HTML
    dependencies:
      - $MANUSCRIPT_DIR/$MARKDOWN_FILE.md
    formula: >
      replace_includes $MANUSCRIPT_DIR/$MARKDOWN_FILE.md | replace_pdfs | pandoc -r markdown+simple_tables+table_captions+yaml_metadata_block $CROSSREF -w html -S --default-image-extension=png --template=$PREFIX/templates/html.template --css=$PREFIX/styles/marked/kultiad-serif.css --filter pandoc-citeproc --csl=$PREFIX/csl/$CSL.csl --bibliography=$BIB_FILE -o $MANUSCRIPT_DIR/$MARKDOWN_FILE.html
    output:
      - $MANUSCRIPT_DIR/$MARKDOWN_FILE.html

  bibliography:
    help: extract citations into a separate BibTeX file
    dependencies:
      - $MANUSCRIPT_DIR/$MARKDOWN_FILE.md
    formula: >
      bib_extract --bibtex_file $BIB_FILE $MANUSCRIPT_DIR/$MARKDOWN_FILE.md $MANUSCRIPT_DIR/$MARKDOWN_FILE.bib
    output:
      - $MANUSCRIPT_DIR/$MARKDOWN_FILE.bib
